//common
.icon
  display: inline-block
  width:  80px
  height: 80px
  transition all 0.5s
  stroke-linejoin round
  stroke-width 15px

  &:hover
    cursor pointer

  &.gradient-1
    fill: url(#gradient-1)

  &.gradient-2
    fill: url(#gradient-2)

  &.gradient-3
    fill: url(#gradient-3)

  &.gradient-4
    fill: url(#gradient-4)


.icon-custom-section-delimeter
  width:  160px
  height: 80px



.icon.simple
  fill none
  stroke #38414a

.icon.custom
  fill #f04532

.icon.business
  fill #c92b3b

.icon.construction
  fill #316eb0

.icon.social
  fill #485059

.icon.tools
  fill #810634

.icon.unique
  fill #36424f




.icon.header
  width: 50px
  height: 50px

.icon.icon-custom-basket-3.color-1
  fill #528c76

.icon.icon-custom-basket-3.color-2
  fill #707442

.icon.icon-custom-basket-3.gradient-1
  fill url(#gradient-1)



