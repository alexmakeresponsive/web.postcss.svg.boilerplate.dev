
.icon
  display: inline-block
  width:  80px
  height: 80px
  transition all 0.5s

  &:hover
    cursor pointer

//simple
.icon.simple, .icon-custom-basket, .icon-custom-section-delimeter
  fill none
  stroke #000000
  stroke-width 15px
  stroke-linejoin round

//custom
.icon.custom
  fill #f8c24b

.icon.icon-custom-section-delimeter
  display: inline-block
  width:  160px
  height: 80px
  fill none

.icon.icon-custom-basket
  fill none

.icon.custom.color-1
  stroke #be6558
  fill: #62c3ff

  &:hover
    fill: #316280

.icon.custom.color-2
  stroke #5b665c
  fill: #a08d4b



.icon.social
  fill #000000
  stroke-width 0
  stroke #000000


.icon
  &.gradient-1
    fill: url(#gradient-1)

  &.gradient-2
    fill: url(#gradient-2)

  &.gradient-3
    fill: url(#gradient-3)

  &.gradient-4
    fill: url(#gradient-4)
